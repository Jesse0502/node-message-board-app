<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <h1 class="hero">All Logs</h1>
    <div class="log-wrapper">
      <% if(messages.length){ %> <% messages.forEach(msg => {%>
      <div class="logs">
        <div class="log">
          <h1><%= msg.title %></h1>
          <hr />
          <p><%= msg.body %></p>
          <p><%= format(msg.date, {addSuffix: true}) %></p>
        </div>
      </div>
      <% }) %> <% } else { %> <% } %>
      <div class="addlog">
        <a href="/create">&#43;</a>
      </div>
    </div>
  </body>
</html>
